<h1>Listing notices   </h1>

<style>
    table, th, td
    {
        border-collapse:collapse;
        border:1px solid black;
    }
    th, td
    {
        padding:15px;
    }
</style>

<%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
<br><br>

<table>
  <thead>
    <tr>
      <td>Title</td>
      <td>Description</td>
      <td>User (name)</td>
      <td>Published at</td>
    </tr>
  </thead>

  <tbody>
    <% @notices.each do |notice| %>
      <tr>
        <td><%= link_to notice.titile, notice %></td>
        <td><%= notice.description %></td>
        <td><%= notice.user.name %></td>
        <% t = notice.created_at + 6.hours %>
        <td><%= t.strftime("%I:%M:%S %p, %b %d, %Y") %></td>
        <td><%= "#{distance_of_time_in_words(Time.now, notice.created_at)} ago" %></td>
        <% if notice.user_id == current_user.id %>
            <td><%= link_to 'Edit', edit_notice_path(notice) %></td>
        <% end %>
        <% if notice.user_id == current_user.id %>
            <td><%= link_to 'Destroy', notice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

